  <script>
   var bubbleOptions;
   
    Polymer({

      is: 'bubble-chart-card',

      properties: {
        prop1: {
          type: String,
          value: 'Guest',
        },
      },
      ready: function(){
       //var chart = new Highcharts.Chart({
       bubbleOptions = {

				chart: {
					type: 'bubble',
					renderTo: 'container2',
					plotBorderWidth: 1,
					zoomType: 'xy'
					
				},
				credits: {
      enabled: false
  },
				exporting: {
        buttons: {
            contextButtons: {
                enabled: false,
                menuItems: null
            }
        },
        	enabled: false
        },
				legend: {
					enabled: false
				},
				title: {
					text: 'Requisition By Buyer'
				},
				xAxis: {
					gridLineWidth: 1,
					title: {
						text: '# Open Req'
					},
					labels: {
						format: '{value} '
					},
					plotLines: [{
						color: 'black',
						dashStyle: 'dot',
						width: 2,
						value: 2,
						label: {
							rotation: 0,
